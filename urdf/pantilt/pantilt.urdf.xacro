<?xml version="1.0"?>

<robot name="pantilt" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find ubiquitous_display_description)/urdf/pantilt/pantilt.transmission.xacro"/>
  <xacro:include filename="$(find ubiquitous_display_description)/urdf/pantilt/pantilt.gazebo.xacro"/>


  <xacro:property name="base_to_box_height" value="0.065"/>
  <xacro:property name="box_to_proj_height" value="0.17"/>

  <material name="red" >
    <color rgba="0.7 0.0 0.7 1.0" />
  </material>
  <material name="blue" >
    <color rgba="0.0 0.7 0.7 1.0" />
  </material>
  <material name="green" >
    <color rgba="0.0 0.7 0.7 1.0" />
  </material>
  <material name="gray" >
    <color rgba="0.7 0.7 0.7 1.0" />
  </material>

  <xacro:macro name="pantilt_name" params="name parent">

    <link name="${name}base_link" >
    </link>

    <link name="${name}box_link" >
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.07 0.085 0.065" />
        </geometry>
        <material name="gray"/>
      </visual>
     <inertial>
       <origin xyz="0 0 ${base_to_box_height/2}" rpy="0 0 0"/>
       <mass value="0.28"/>
       <inertia
	    ixx="0.00190" ixy="0.0" ixz="0.0"
	    iyy="0.00202" iyz="0.0"
	    izz="0.00152"/>
     </inertial>
    </link>

    <link name="${name}plate_link">
      <visual>
        <origin xyz="0.075 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.35 0.095 0.003" />
        </geometry>
        <material name="gray"/>
      </visual>
     <inertial>
       <origin xyz="0 0 0.0015" rpy="0 0 0"/>
       <mass value="0.08"/>
       <inertia
	    ixx="0.00150" ixy="0.0" ixz="0.0"
	    iyy="0.02191" iyz="0.0"
	    izz="0.02041"/>
     </inertial>
    </link>

    <link name="left_pt_pillars" >
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.01 0.05 0.20" />
        </geometry>
        <material name="gray" />
      </visual>
     <inertial>
       <origin xyz="0 0 0.01" rpy="0 0 0"/>
       <mass value="0.06"/>
       <inertia
	    ixx="0.00708" ixy="0.0" ixz="0.0"
	    iyy="0.00043" iyz="0.0"
	    izz="0.00668"/>
     </inertial>
    </link>

    <link name="right_pt_pillars" >
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.01 0.05 0.20" />
        </geometry>
        <material name="gray" />
      </visual>
     <inertial>
       <origin xyz="0 0 0.01" rpy="0 0 0"/>
       <mass value="0.06"/>
       <inertia
	    ixx="1.0" ixy="0.0" ixz="0.0"
	    iyy="1.0" iyz="0.0"
	    izz="1.0"/>
     </inertial>
    </link>

    <link name="${name}projector_link">
      <visual>
        <origin xyz="0.07 0.037 0" rpy="0 0 0" />
        <geometry>
          <box size="0.24 0.17 0.07" />
        </geometry>
        <material name="gray"/>
      </visual>
     <inertial>
       <origin xyz="0 0 0.035" rpy="0 0 0"/>
       <mass value="2"/>
       <inertia
	    ixx="0.00536" ixy="0.0" ixz="0.0"
	    iyy="0.01441" iyz="0.0"
	    izz="0.01041"/>
     </inertial>
    </link>

    <link name="${name}projector_optical_frame"/>

    <joint name="top_plate_link_to_ud_pt_base_link" type="fixed">
      <origin xyz="0 0 0.0325 " rpy="0 0 3.14" />
      <parent link="${parent}"/>
      <child link="${name}base_link"/>
    </joint>

    <joint name="${name}base_joint" type="fixed">
      <parent link="${name}base_link"/>
      <child link="${name}box_link"/>
      <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

    <!--name of pan_joint and tilt_joint depend pantilt.yaml-->
    <joint name="pan_joint" type="revolute">
      <parent link="${name}box_link"/>
      <child link="${name}plate_link"/>
      <origin xyz="0 0 ${base_to_box_height/2}" rpy="0 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="-2.9670" upper="2.9670" effort="41" velocity="1"/>
      <!--<safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />-->
      <dynamics damping="0.7"/>
    </joint>


    <joint name="${name}plate_link_to_left_pt_pillars" type="fixed">
      <parent link="${name}plate_link"/>
      <child link="left_pt_pillars"/>
      <origin xyz="-0.09 0 0.1" rpy="0 0 0" />
    </joint>
    <joint name="${name}plate_link_to_right_pt_pillars" type="fixed">
      <parent link="${name}plate_link"/>
      <child link="right_pt_pillars"/>
      <origin xyz="0.24 0 0.1" rpy="0 0 0" />
    </joint>

    <joint name="tilt_joint" type="revolute">
      <parent link="${name}plate_link"/>
      <child link="${name}projector_link"/>
      <origin xyz="0 0 ${box_to_proj_height}" rpy="0 0 0" />
      <axis xyz="1 0 0" />
      <limit lower="-0.2617" upper="1.3" effort="10" velocity="1"/>
      <!--<safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />-->
      <dynamics damping="0.7"/>
    </joint>

    <joint name="${name}projector_link_to_${name}projector_optical_frame" type="fixed">
      <parent link="${name}projector_link"/>
      <child link="${name}projector_optical_frame"/>
      <origin xyz="0 -0.02 0" rpy="-1.56 0 3.14" />
    </joint>

  </xacro:macro>

</robot>
