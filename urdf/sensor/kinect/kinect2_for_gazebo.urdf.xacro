<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="kinect2_for_gazebo">
  <xacro:include filename="$(find ubiquitous_display_description)/urdf/sensor/kinect/kinect2.gazebo.xacro"/>

  <xacro:macro name="kinect2_for_gazebo_model" params="name camera_name">
    <link name="${camera_name}_plate_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.25 0.015 0.01" />
        </geometry>
        <material name="gray"/>
      </visual>
    </link>

    <joint name="${name}projector_link_to_${camera_name}_plate_link" type="fixed">
      <origin xyz="0.075 -0.11 0.135" rpy="0 0 3.14" />
      <parent link="${name}projector_link" />
      <child link="${camera_name}_plate_link" />
    </joint>

    <link name="${camera_name}_base_frame">
      <collision>
        <origin rpy="-1.56 0 0" xyz="0 0 0"/>
        <geometry>
          <box size="0.25 0.065 0.068"/>
        </geometry>
      </collision>

      <visual>
        <origin rpy="-1.56 0 0" xyz="0 0 0"/>
        <geometry>
            <!-- these meshes were exported in mm, so scale back to m -->
          <mesh filename="package://ubiquitous_display_description/meshes/STL/kinect2_origin_on_rgb_optical_frame.stl" scale="0.001 0.001 0.001"/>
          <!--box size="0.25 0.07 0.6" /-->
        </geometry>
        <material name="black"/>
      </visual>

      <inertial>
        <mass value="0.2" />
        <origin rpy="-1.56 0 0" xyz="0 0 0"/>
        <inertia
          ixx="0.00147" ixy="0" ixz="0"
          iyy="0.01112" iyz="0"
          izz="0.01118" />
      </inertial>
    </link>
    <link name="${camera_name}_rgb_optical_frame">
    </link>

    <link name="${camera_name}_ir_optical_frame">
    </link>

    <joint name="${camera_name}_plate_to_${camera_name}_base_frame" type="fixed">
      <origin xyz="0.095 0 0.035 " rpy="-1.56 0 0" />
      <parent link="${camera_name}_plate_link"/>
      <child link="${camera_name}_base_frame"/>
    </joint>

    <joint name="${camera_name}_base_frame_to_${camera_name}_rgb_optical_frame" type="fixed">
      <origin xyz="0 0 0.03 " rpy="-1.57 -1.57 -1.57" />
      <parent link="${camera_name}_base_frame"/>
      <child link="${camera_name}_rgb_optical_frame"/>
    </joint>

    <joint name="${camera_name}_rgb_optical_frame_to_${camera_name}_ir_optical_frame" type="fixed">
      <origin xyz="0 0 -0.0425" rpy="0 0 0" />
      <parent link="${camera_name}_rgb_optical_frame"/>
      <child link="${camera_name}_ir_optical_frame"/>
    </joint>

    <gazebo reference="${camera_name}_base_frame">
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <material>Gazebo/Black</material>
    </gazebo>

    <!--<xacro:camera_gazebo link_name="kinect2_rgb" frame_name="kinect2_rgb_optical_frame"/>-->
    <xacro:kinect_ir_sensor_gazebo link_name="${camera_name}_ir" frame_name="${camera_name}_ir_optical_frame" camera_name="${camera_name}_ir" />
    <xacro:kinect_rgb_sensor_gazebo link_name="${camera_name}_rgb" frame_name="${camera_name}_rgb_optical_frame" camera_name="${camera_name}_rgb" />
  </xacro:macro>

</robot>
